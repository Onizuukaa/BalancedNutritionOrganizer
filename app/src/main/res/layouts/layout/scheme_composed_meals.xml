<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scheme_composed_meals"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewProductsIncludedComposedMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <GridLayout
        android:id="@+id/gridLayoutComposedMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#5597B5"
        android:columnCount="3"
        android:rowCount="3">

        <TextView
            android:id="@+id/textViewComposedMealsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:text="Tu będzie nazwa posiłku"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewComposedMealsKcal"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="341 \nKCAL" />

        <TextView
            android:id="@+id/textViewComposedMealsGram"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="213g \nweight" />

        <TextView
            android:id="@+id/textViewComposedMealsCarbohydrates"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="34g \ncarbohydrates" />

        <TextView
            android:id="@+id/textViewComposedMealsFats"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="21g \nfats" />

        <TextView
            android:id="@+id/textViewComposedMealsProtein"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="3g \nprotein" />

        <TextView
            android:id="@+id/textViewComposedMealsSugar"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="21g \nsugar" />

        <TextView
            android:id="@+id/textViewComposedMealsSaturatedFats"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="11g \nsaturatedFats" />

        <CheckBox
            android:id="@+id/checkBox_composedMeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:text="Include" />

    </GridLayout>

</androidx.cardview.widget.CardView>