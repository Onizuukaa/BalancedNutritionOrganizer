<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/caloriesRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D11FF02"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/imageViewBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            app:srcCompat="@drawable/fats" />

        <TextView
            android:layout_marginBottom="5dp"
            android:paddingHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Fats_1st"/>

        <TextView
            android:background="@drawable/cell_shape_carbohydrates"
            android:layout_marginBottom="5dp"
            android:paddingHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Fats_2nd"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:paddingHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Fats_3rd"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fats_4th"/>

        <GridLayout
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/cell_shape_calories"
            android:columnCount="1"
            android:rowCount="6">

            <TextView
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:text="@string/inhibition_of_growth_and_development" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/skin_problems" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:text="@string/lipid_disorders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/weakening_of_immunity" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:paddingVertical="4dp"
                android:text="@string/infertility" />

        </GridLayout>

        <Button
            android:background="@drawable/button_background"
            android:id="@+id/button_Exit_BottomSheet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayoutCalories"
            android:layout_marginTop="5dp"
            android:text="@string/Exit" />

    </LinearLayout>

</ScrollView>