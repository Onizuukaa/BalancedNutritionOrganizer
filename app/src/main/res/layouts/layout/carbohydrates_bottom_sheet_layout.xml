<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D11FF02"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewBottomSheet"
            android:layout_width="380dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/carbohydrates" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Carbo_1st" />

        <TextView
            android:background="@drawable/cell_shape_carbohydrates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Carbo_2nd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Carbo_3rd" />

        <TextView
            android:background="@drawable/cell_shape_carbohydrates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Carbo_4th"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Carbo_5th" />

        <Button
            android:id="@+id/button_Exit_BottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/Exit" />

    </LinearLayout>

</ScrollView>