<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/caloriesRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D11FF02"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/imageViewBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            app:srcCompat="@drawable/protein" />

        <Button
            android:id="@+id/button_Exit_BottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayoutCalories"
            android:layout_marginTop="5dp"
            android:text="Exit" />

    </LinearLayout>

</ScrollView>