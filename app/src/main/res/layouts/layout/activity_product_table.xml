<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".ProductTableActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow>

            <ImageView
                android:onClick="openVegetablesListActivity"
                android:id="@+id/imageViewVegetablesTable"
                android:layout_width="198dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/vegetables" />

            <ImageView
                android:onClick="openFruitsListActivity"
                android:id="@+id/imageViewFruitsTable"
                android:layout_width="189dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/fruits" />

        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Vegetables"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Fruits"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <ImageView
                android:onClick="openGrainProductsListActivity"
                android:id="@+id/imageViewGrainProductsTable"
                android:layout_width="198dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/grain_products" />

            <ImageView
                android:onClick="openDairyListActivity"
                android:id="@+id/imageViewDairyTable"
                android:layout_width="189dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/dairy" />
            
        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Grain_Products"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Dairy"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <ImageView
                android:onClick="openFishListActivity"
                android:id="@+id/imageViewFishTable"
                android:layout_width="189dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/grilled_fish" />

            <ImageView
                android:onClick="openMeatListActivity"
                android:id="@+id/imageViewMeatTable"
                android:layout_width="198dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/meat" />

        </TableRow>

        <TableRow android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Fish"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Meat"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <ImageView
                android:onClick="openSweetsListActivity"
                android:id="@+id/imageViewSweetsTable"
                android:layout_width="198dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/sweets" />

            <ImageView
                android:onClick="openDrinksListActivity"
                android:id="@+id/imageViewDrinksTable"
                android:layout_width="189dp"
                android:layout_height="105dp"
                app:srcCompat="@drawable/drinks" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Sweets"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Drinks"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

</LinearLayout>