<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompleteMetabolismActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Płeć" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:checked="true"
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mężczyzna" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kobieta" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wiek" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="18-120 lat"
            android:text="27"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wzrost" />

        <EditText
            android:id="@+id/editTextHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="cm"
            android:text="167"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waga"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="280dp" />

        <EditText
            android:text="66.45"
            android:id="@+id/editTextWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="kg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktywność fizyczna"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="329dp" />

        <Spinner
            android:id="@+id/spinnerPhysicalActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/CPM" />

    </LinearLayout>

    <Button
        android:onClick="buttonCalculateTotalMetabolism"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Oblicz" />

    <TextView
        android:id="@+id/textViewResultCompleteMetabolism"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewResultCompleteMetabolismMacros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:columnCount="4"
        android:rowCount="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:text="Białko" />

        <TextView
            android:id="@+id/textViewTotalMetabolismProtein_Gram"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0g" />

        <TextView
            android:id="@+id/textViewTotalMetabolismProtein_Kcal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0 kcal" />

        <TextView
            android:id="@+id/textViewTotalMetabolismProtein_Percent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0%" />

        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="Tłuszcze" />

        <TextView
            android:id="@+id/textViewTotalMetabolismFats_Gram"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0g" />

        <TextView
            android:id="@+id/textViewTotalMetabolismFats_Kcal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0 kcal" />

        <TextView
            android:id="@+id/textViewTotalMetabolismFats_Percent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0%" />

        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="Węglowodany" />

        <TextView
            android:id="@+id/textViewTotalMetabolismCarbo_Gram"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0g" />

        <TextView
            android:id="@+id/textViewTotalMetabolismCarbo_Kcal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0 kcal" />

        <TextView
            android:id="@+id/textViewTotalMetabolismCarbo_Percent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:padding="2dp"
            android:text="0%" />

    </GridLayout>

</LinearLayout>