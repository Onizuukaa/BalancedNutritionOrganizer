<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompleteMetabolismActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/Gender"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/Male" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Female" />

        </RadioGroup>

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:columnCount="2"
        android:rowCount="3">

        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/Age"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:ems="10"
                android:gravity="center"
                android:hint="18-120 lat"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:text="27" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/Height"
                android:textSize="20sp" />

            <EditText
                android:maxLength="3"
                android:id="@+id/editTextHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:inputType="numberDecimal"
                android:ems="10"
                android:gravity="center"
                android:hint="cm"
                android:text="167" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/Weight"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="280dp" />

            <EditText
                android:maxLength="5"
                android:id="@+id/editTextWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:inputType="numberDecimal"
                android:ems="10"
                android:gravity="center"
                android:hint="kg"
                android:text="66.45" />

        </TableRow>

    </TableLayout>

    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:gravity="center"-->
    <!--        android:orientation="horizontal">-->
    <!--        -->
    <!--    </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/Physical_activity"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerPhysicalActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/TDEE" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@drawable/button_background"
        android:onClick="buttonCalculateTotalMetabolism"
        android:text="@string/Calculate" />

    <!--    <TextView-->
    <!--        android:id="@+id/textViewResultCompleteMetabolism"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:textSize="18sp" />-->

    <!--    <TextView-->
    <!--        android:id="@+id/textViewResultCompleteMetabolismMacros"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:text="Dzienne zapotrzebowanie na makroskÅ‚adniki"-->
    <!--        android:textColor="#000000"-->
    <!--        android:textSize="18sp" />-->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:columnCount="4"
        android:rowCount="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="@string/Daily_calories_requirement" />

        <TextView
            android:id="@+id/textViewTotalMetabolismTotal_Kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0 kcal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="@string/Protein" />

        <TextView
            android:id="@+id/textViewTotalMetabolismProtein_Gram"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0g" />

        <TextView
            android:id="@+id/textViewTotalMetabolismProtein_Kcal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0 kcal" />

        <TextView
            android:id="@+id/textViewTotalMetabolismProtein_Percent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0%" />

        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="@string/Fats" />

        <TextView
            android:id="@+id/textViewTotalMetabolismFats_Gram"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0g" />

        <TextView
            android:id="@+id/textViewTotalMetabolismFats_Kcal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0 kcal" />

        <TextView
            android:id="@+id/textViewTotalMetabolismFats_Percent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0%" />

        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="@string/Carbohydrates" />

        <TextView
            android:id="@+id/textViewTotalMetabolismCarbo_Gram"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0g" />

        <TextView
            android:id="@+id/textViewTotalMetabolismCarbo_Kcal"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0 kcal" />

        <TextView
            android:id="@+id/textViewTotalMetabolismCarbo_Percent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape_total_metabolism"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:text="0%" />

    </GridLayout>

</LinearLayout>