<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/caloriesRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D11FF02"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/imageViewBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:srcCompat="@drawable/calories" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/Calories_1st" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="@string/Calories_2nd"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewBottomSheet"
            android:layout_marginHorizontal="5dp"
            android:text="@string/Calories_3rd"/>


        <GridLayout
            android:background="@drawable/cell_shape_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:paddingHorizontal="3dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Male_Calories"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TDEE_PATERN_Male" />

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:paddingHorizontal="3dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Female_Calories"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TDEE_PATERN_Female" />

        </GridLayout>

        <GridLayout
            android:background="@drawable/cell_shape_calories"
            android:id="@+id/gridLayoutCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:columnCount="2"
            android:rowCount="6">

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/Activity_value"
                android:textStyle="bold" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="@string/Activity_degree"
                android:textStyle="bold" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.2" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="@string/inactivity_sitting_work" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.3 - 1.4" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="@string/low_activity" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.5 - 1.6" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="@string/moderate_activity" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.7 - 1.8" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="@string/high_activity" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.9 - 2.2" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="@string/very_high_activity" />

        </GridLayout>

        <Button
            android:background="@drawable/button_background"
            android:id="@+id/button_Exit_BottomSheet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayoutCalories"
            android:layout_marginTop="5dp"
            android:text="@string/Exit" />

    </LinearLayout>

</ScrollView>