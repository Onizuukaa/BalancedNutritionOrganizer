<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/caloriesRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0D11FF02"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_marginBottom="5dp"
            android:id="@+id/imageViewBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:srcCompat="@drawable/calories" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Zapotrzebowanie na kalorie dla każdego człowieka jest inne w zależności od wielu czynników. Takich jak waga, wzrost i aktywność fizyczna. Przelicznik kalorii wynosi:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="1g białka = 4kcal 1g węglowodanów = 4kcal 1g tłuszczy = 9kcal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewBottomSheet"
            android:layout_marginHorizontal="5dp"
            android:text="Przeciętny człowiek potrzebuje dziennie ok. 2000 kcal. Tyle jest uwzględnione na opakowaniach produktów spożywczych.\nNa zapotrzebowanie składa się PPM (podstawowa przemiana materii) pomnożona przez wartość odpowiadającą aktywności fizycznej. Istnieją wzory do wyliczenia PPM. W BNO stosuje się wzór Mifflin-St Jeor." />


        <GridLayout
            android:background="@drawable/cell_shape_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mężczyźni"
                android:textStyle="bold" />

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[9,99 * masa ciała (kg)] + [6,25 * wzrost (cm)]\n- [4,92 * wiek (lata)] + 5" />

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Kobiety"
                android:textStyle="bold" />

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:padding="2dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[9,99 * masa ciała (kg)] + [6,25 * wzrost (cm)]\n- [4,92 * wiek (lata)] - 161" />

        </GridLayout>

        <GridLayout
            android:background="@drawable/cell_shape_calories"
            android:id="@+id/gridLayoutCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:columnCount="2"
            android:rowCount="6">

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Wartość aktywności"
                android:textStyle="bold" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Stopień aktywności"
                android:textStyle="bold" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.2" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="brak aktywności, praca siedząca" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.3 - 1.4" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="niska aktywność (praca siedząca\ni 1 - 2 treningi w tygodniu)" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.5 - 1.6" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="Średnia aktywność (praca siedząca\ni treningi 3 - 4 razy w tygodniu)" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.7 - 1.8" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="wysoka aktywność (praca fizyczna i\n 3 - 4 treningi w tygodniu)" />

            <TextView
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="1.9 - 2.2" />

            <TextView
                android:paddingLeft="5dp"
                android:background="@drawable/cell_shape_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:text="bardzo wysoka aktywność\n(zawodowi sportowcy, osoby\ncodziennie trenujące" />

        </GridLayout>

        <Button
            android:id="@+id/button_Exit_BottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayoutCalories"
            android:layout_marginTop="5dp"
            android:text="Exit" />

    </LinearLayout>

</ScrollView>