<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D11FF02"
    tools:context=".HealthyInfoActivity">

    <TextView
        android:paddingHorizontal="5dp"
        android:background="#A2E3A4"
        android:paddingVertical="8dp"
        android:shape="rectangle"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/Healthy_Information"
        android:textSize="20sp" />

    <TextView
        android:paddingVertical="8dp"
        android:id="@+id/textView_InfoCalories"
        android:onClick="openInfoAboutCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corner_calories"
        android:gravity="center"
        android:text="@string/Calories"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:background="@drawable/rounded_corner_carbo"
        android:paddingVertical="8dp"
        android:onClick="openInfoAboutCarbohydrates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="@string/Carbohydrates"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:paddingVertical="8dp"
        android:onClick="openInfoAboutProtein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corner_protein"
        android:gravity="center"
        android:text="@string/Protein"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:paddingVertical="8dp"
        android:onClick="openInfoAboutFats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_corner_fats"
        android:gravity="center"
        android:text="@string/Fats"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:paddingVertical="8dp"
        android:onClick="openInfoAboutWater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corner_water"
        android:gravity="center"
        android:text="@string/Water"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:paddingVertical="8dp"
        android:onClick="openInfoAboutMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_corner_meals"
        android:gravity="center"
        android:text="@string/meals_a_day"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>