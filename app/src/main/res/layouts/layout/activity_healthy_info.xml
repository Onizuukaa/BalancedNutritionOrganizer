<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HealthyInfoActivity">

    <TextView
        android:shape="rectangle"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:text="Here are healthy information about food! Choose what do you want to know."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_InfoCalories"
        android:onClick="openInfoAboutCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:text="Information about Calories"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:onClick="openInfoAboutCarbohydrates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="Information about Carbohydrates"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:onClick="openInfoAboutProtein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="Information about Protein"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:onClick="openInfoAboutFats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:text="Information about Fats"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>