<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scheme_composed_daily_meals"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewProductsIncludedComposedDailyMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <GridLayout
        android:id="@+id/gridLayoutComposedMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#5597B5"
        android:columnCount="2"
        android:rowCount="6">

        <TextView
            android:id="@+id/textViewComposedDailyMealsName"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:text="Poniedziałek"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsKcal_Sum"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:maxEms="20"
            android:padding="2dp"
            android:text="kcal 52 | carbo 14g | sugar 10g | fats 0.2g | saturatedfats 0g | protein 0.3g | weight 100g" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsFirstProduct"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="Ogórkowa" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsKcal_FirstProduct_Sum"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:maxEms="20"
            android:padding="2dp"
            android:text="kcal 52 | carbo 14g | sugar 10g | fats 0.2g | saturatedfats 0g | protein 0.3g | weight 100g" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsSecondProduct"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="Pomidorowa" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsKcal_SecondProduct_Sum"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:maxEms="20"
            android:padding="2dp"
            android:text="kcal 52 | carbo 14g | sugar 10g | fats 0.2g | saturatedfats 0g | protein 0.3g | weight 100g" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsThirdProduct"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="Wodzionka" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsKcal_ThirdProduct_Sum"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:maxEms="20"
            android:padding="2dp"
            android:text="kcal 52 | carbo 14g | sugar 10g | fats 0.2g | saturatedfats 0g | protein 0.3g | weight 100g" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsFourthProduct"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="Flaki" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsKcal_FourthProduct_Sum"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:maxEms="20"
            android:padding="2dp"
            android:text="kcal 52 | carbo 14g | sugar 10g | fats 0.2g | saturatedfats 0g | protein 0.3g | weight 100g" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsFifthProduct"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="Barszcz" />

        <TextView
            android:id="@+id/textViewComposedDailyMealsKcal_FifthProduct_Sum"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:maxEms="20"
            android:padding="2dp"
            android:text="kcal 52 | carbo 14g | sugar 10g | fats 0.2g | saturatedfats 0g | protein 0.3g | weight 100g" />

    </GridLayout>

</androidx.cardview.widget.CardView>