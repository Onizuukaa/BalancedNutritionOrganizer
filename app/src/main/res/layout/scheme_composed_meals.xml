<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scheme_composed_meals">

    <TextView
        android:id="@+id/textViewComposedMealsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu będzie nazwa posiłku"/>

    <GridLayout
        android:id="@+id/gridLayoutComposedMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_purple"
        android:columnCount="3"
        android:rowCount="3">

        <TextView
            android:id="@+id/textViewComposedMealsKcal"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="341 \nKCAL" />

        <TextView
            android:id="@+id/textViewComposedMealsGram"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="213g \nweight" />

        <TextView
            android:id="@+id/textViewComposedMealsCarbohydrates"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="34g \ncarbohydrates" />

        <TextView
            android:id="@+id/textViewComposedMealsFats"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="21g \nfats" />

        <TextView
            android:id="@+id/textViewComposedMealsProtein"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="3g \nprotein" />

        <TextView
            android:id="@+id/textViewComposedMealsSugar"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="21g \nsugar" />

        <TextView
            android:id="@+id/textViewComposedMealsSaturatedFats"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:padding="2dp"
            android:text="11g \nsaturatedFats" />
    </GridLayout>


</androidx.cardview.widget.CardView>